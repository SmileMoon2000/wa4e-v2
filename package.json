{
  "devDependencies": {
    "@eslint/eslintrc": "^0.4.2",
    "@open-wc/building-rollup": "^1.10.0",
    "@open-wc/eslint-config": "^0.3.12",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.4.2",
    "@web/dev-server": "^0.1.16",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/dev-server-rollup": "^0.3.4",
    "@web/test-runner": "^0.12.20",
    "deepmerge": "^4.2.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-html": "^6.1.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.45.2"
  },
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index public/index.html --open --compatibility none",
    "start": "web-dev-server"
  },
  "name": "wa4e-v2",
  "version": "0.0.0",
  "description": "Webcomponent wa4e-v2 following open-wc recommendations",
  "author": "we4e-v2",
  "license": "",
  "dependencies": {
    "@sideway/address": "^4.1.2",
    "@stdlib/array-linspace": "^0.0.6",
    "@stdlib/array-logspace": "^0.0.6",
    "bootstrap": "^5.0.2",
    "core-js": "^3.15.2",
    "joi": "^17.4.0",
    "lit": "2.0.0-rc.2",
    "load-json-file": "^2.0.0",
    "lodash-es": "^4.17.21",
    "masonry-layout": "^4.2.2",
    "mathjs": "^9.4.4",
    "plotly.js-dist-min": "^2.2.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
